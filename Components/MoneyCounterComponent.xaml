        <!-- One Pence -->
        <GroupBox Style="{DynamicResource BTMoneyCounterBox}" Grid.Row="12" Grid.Column="0" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
