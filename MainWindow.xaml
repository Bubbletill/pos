<Window x:Class="BT_POS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BT_POS"
        mc:Ignorable="d"
        Title="Bubbletill POS" Height="1080" Width="1920" Icon="/Assets/icon.png" WindowState="Maximized" WindowStyle="None">
    <Grid x:Name="POSParentGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="467*"/>
        </Grid.RowDefinitions>
        <GroupBox x:Name="POSParentHeader" Grid.Row="0" Grid.RowSpan="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="#FFABDFFF" Background="#FFABDFFF" BorderThickness="0,0,0,0" Foreground="Black">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120*"/>
                    <ColumnDefinition Width="802*"/>
                    <ColumnDefinition Width="197*"/>
                    <ColumnDefinition Width="114*"/>
                    <ColumnDefinition Width="186*"/>
                    <ColumnDefinition Width="234*"/>
                    <ColumnDefinition Width="254*"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Source="/Assets/logo-short.png" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform Y="5"/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <TextBlock x:Name="POSParentHeader_DateTime" Grid.Column="2" TextWrapping="Wrap" Text="" VerticalAlignment="Center" FontSize="20"/>
                <TextBlock x:Name="POSParentHeader_Status" Grid.Column="3" TextWrapping="Wrap" Text="Online" VerticalAlignment="Center" FontSize="20"/>
                <TextBlock x:Name="POSParentHeader_Register" Grid.Column="4" TextWrapping="Wrap" Text="Register# " VerticalAlignment="Center" FontSize="20"/>
                <TextBlock x:Name="POSParentHeader_Trans" Grid.Column="5" TextWrapping="Wrap" Text="Transaction# 0" VerticalAlignment="Center" FontSize="20"/>
                <TextBlock x:Name="POSParentHeader_Operator" Grid.Column="6" TextWrapping="Wrap" Text="Operator# " VerticalAlignment="Center" FontSize="20"/>
            </Grid>
        </GroupBox>
        <ContentControl x:Name="POSViewContainer" Grid.Row="1" Content="Loading..." HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
